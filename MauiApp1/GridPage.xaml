<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiApp1.GridPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#F7F3EE"
    Title="Trips Traps Trull">

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="18">

            <!-- Заголовок -->
            <Label x:Name="TitleLabel"
             Text="Trips Traps Trull"
             FontSize="34"
             FontFamily = "nautilus"
             FontAttributes="Bold"
             TextColor="#30343A"
             HorizontalOptions="Center" />

            <!-- Игровая сетка -->
            <Grid x:Name="BoardGrid"
            RowSpacing="0" ColumnSpacing="0"
            WidthRequest="320" HeightRequest="320"
            HorizontalOptions="Center" />

            <!-- Кнопки управления -->
            <Grid 
            x:Name="ControlsGrid"
            ColumnDefinitions="*,*"
            RowDefinitions="Auto,Auto,Auto,Auto"
            ColumnSpacing="16" RowSpacing="14"
            Margin="0,12,0,0">

                <Button Grid.Row="0" Grid.Column="0"
                Text="Начать игру"
                FontFamily = "nautilus"
                Clicked="NewGameClicked" />

                <Button Grid.Row="0" Grid.Column="1"
                Text="Кто первый?"
                FontFamily = "nautilus"
                Clicked="WhoStartsClicked" />

                <Button Grid.Row="1" Grid.Column="0"
                Text="Выбрать цвет"
                FontFamily = "nautilus"
                Clicked="ChooseSymbolClicked" />

                <Button Grid.Row="1" Grid.Column="1"
                Text="Игра с ботом"
                FontFamily = "nautilus"
                Clicked="ToggleBotClicked" />

                <Button Grid.Row="2" Grid.Column="0"
                Text="Размер поля"
                FontFamily = "nautilus"
                Clicked="ChangeSizeClicked" />

                <Button Grid.Row="2" Grid.Column="1"
                Text="Выход"
                FontFamily = "nautilus"
                Clicked="ExitClicked" />

                <!-- Переключатель фона -->
                <Button Grid.Row="3" Grid.ColumnSpan="2"
                Text="Режим: День"
                FontFamily = "nautilus"
                Clicked="ToggleBackgroundClicked" />
            </Grid>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
